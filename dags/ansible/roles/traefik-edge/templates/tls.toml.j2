# TLS Certificates (Cloudflare Origin Certificate)
{% if cloudflare_origin_cert is defined and cloudflare_origin_key is defined %}
[[tls.certificates]]
  certFile = "/etc/traefik/origin-cert.pem"
  keyFile = "/etc/traefik/origin-key.pem"
  stores = ["default"]

[tls.stores]
  [tls.stores.default]
    [tls.stores.default.defaultCertificate]
      certFile = "/etc/traefik/origin-cert.pem"
      keyFile = "/etc/traefik/origin-key.pem"
{% endif %}
